# Standardize editor configurations across different IDEs and contributors

root = true

# Global settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C++ Subsystems (Storage, Network, FFI, Infra)
[*.{cpp,hpp,h}]
indent_size = 4

# Rust Logic Core (aevum_logic)
[*.rs]
indent_size = 4

# Metadata and Configuration Files (Richer indentation for clarity)
[*.{toml,yaml,yml}]
indent_size = 2

# Markdown documentation (Allow trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# Build System: Makefile (Requires actual Tab characters)
[Makefile]
indent_style = tab

# Build System: CMake Configuration
[CMakeLists.txt]
indent_size = 4
